<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_pannel_vp"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/home_pannel_indicator"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            app:ci_drawable="@drawable/shape_indicator"
            app:ci_margin="4dp"
            app:ci_height="7dp"
            app:ci_width="7dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_vp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/home_today_release_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_indicator"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/home_today_release_more_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_arrow_more"
            app:layout_constraintTop_toTopOf="@id/home_today_release_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_today_release_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_today_release_title_tv"/>
        <TextView
            android:id="@+id/home_album_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textColor="@color/flo"
            android:textSize="18sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/home_album_local_tv"
            app:layout_constraintEnd_toStartOf="@id/home_album_local_tv"/>
        <TextView
            android:id="@+id/home_album_local_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textSize="18sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/home_album_international_tv"
            app:layout_constraintEnd_toStartOf="@id/home_album_international_tv"/>
        <TextView
            android:id="@+id/home_album_international_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/home_today_release_title_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

<!--        앨범 이미지 리스트 표현-->
        <HorizontalScrollView
            android:id="@+id/home_album_hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_today_release_title_tv"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:id="@+id/home_album_layout01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:id="@+id/home_album_img01_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_album_exp3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageView
                            android:id="@+id/home_album_play01_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/widget_black_play"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/home_album_title01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Level"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/home_album_singer01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aespa"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_album_layout02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:id="@+id/home_album_img02_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_album_exp2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageView
                            android:id="@+id/home_album_play02_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/widget_black_play"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/home_album_title02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LILAC"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/home_album_singer02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유(IU)"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_album_layout03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:id="@+id/home_album_img03_iv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_album_exp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageView
                            android:id="@+id/home_album_play03_iv"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/widget_black_play"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/home_album_title03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Butter"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/home_album_singer03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTS"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_album_hs"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>