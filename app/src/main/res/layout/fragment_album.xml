<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/album_back_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/nugu_btn_down"
        android:rotation="90"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/album_like_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_my_like_off"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/album_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_back_iv"
        app:layout_constraintEnd_toStartOf="@id/album_more_iv" />
    <ImageView
        android:id="@+id/album_more_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/album_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_back_iv"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Level"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_back_iv"/>
    <TextView
        android:id="@+id/album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/album_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/album_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.05.17 | 국내 | 정규"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/album_singer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/album_img_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_album_exp3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/album_detail_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/album_lp_iv"
        android:layout_width="30dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_album_lp"
        app:layout_constraintTop_toTopOf="@id/album_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_img_iv"
        app:layout_constraintStart_toEndOf="@id/album_img_iv"/>
    <ImageView
        android:id="@+id/album_play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/widget_black_play"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@id/album_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_img_iv"/>
    <LinearLayout
        android:id="@+id/album_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/album_img_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/album_menu01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수록곡"
            android:textColor="@color/flo"/>
        <TextView
            android:id="@+id/album_menu02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="상세정보" />
        <TextView
            android:id="@+id/album_menu03_tv"
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영상" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/album_mix_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/album_menu_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/album_mix_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 취향 Mix"
            android:textColor="#000000"/>
        <Switch
            android:id="@+id/album_switch_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/switchTheme"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/album_select_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/btn_playlist_select_off"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/album_mix_layout"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/album_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/album_select_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_select_iv"
        app:layout_constraintStart_toEndOf="@id/album_select_iv"/>

    <ImageView
        android:id="@+id/album_playAll_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_browse_arrow_right"
        app:layout_constraintTop_toTopOf="@id/album_select_tv"
        app:layout_constraintBottom_toBottomOf="@id/album_select_tv"
        app:layout_constraintEnd_toStartOf="@id/album_playAll_tv"/>
    <TextView
        android:id="@+id/album_playAll_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textSize="12sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/album_select_tv"
        app:layout_constraintBottom_toBottomOf="@id/album_select_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:id="@+id/album_playList_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/album_select_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/album_playList_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/album_song01_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/album_song01_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/album_song01_card"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/flo"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintTop_toTopOf="@id/album_song01_num_tv"
                    app:layout_constraintBottom_toBottomOf="@id/album_song01_num_tv"
                    app:layout_constraintStart_toEndOf="@id/album_song01_num_tv">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="10dp"
                        android:textColor="#FFFFFF"
                        android:text="TITLE" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/album_song01_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Level"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/album_song01_card"
                    app:layout_constraintBottom_toBottomOf="@id/album_song01_card"
                    app:layout_constraintStart_toEndOf="@id/album_song01_card"/>
                <TextView
                    android:id="@+id/album_song01_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가수"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="@id/album_song01_card"
                    app:layout_constraintTop_toBottomOf="@id/album_song01_card"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/album_song01_play_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_miniplayer_play"
                    app:layout_constraintTop_toTopOf="@id/album_song01_title_tv"
                    app:layout_constraintBottom_toBottomOf="@id/album_song01_singer_tv"
                    app:layout_constraintEnd_toStartOf="@id/album_song01_more_iv" />
                <ImageView
                    android:id="@+id/album_song01_more_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/btn_player_more"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="@id/album_song01_title_tv"
                    app:layout_constraintBottom_toBottomOf="@id/album_song01_singer_tv"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>