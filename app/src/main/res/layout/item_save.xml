<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_save_album_cv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/item_save_album_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_save_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butter"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/item_save_album_cv"
        app:layout_constraintStart_toEndOf="@id/item_save_album_cv"
        app:layout_constraintBottom_toTopOf="@id/item_save_singer_tv"/>
    <TextView
        android:id="@+id/item_save_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방탄소년단 (BTS)"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_save_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_save_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_save_album_cv"/>
    <ImageView
        android:id="@+id/item_save_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/item_save_album_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_save_album_cv"
        app:layout_constraintEnd_toStartOf="@id/item_save_more_iv"
        android:src="@drawable/btn_player_play"/>
    <ImageView
        android:id="@+id/item_save_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="@id/item_save_play_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>