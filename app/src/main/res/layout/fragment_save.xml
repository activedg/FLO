<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/save_select_all_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_playlist_select_off"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/save_select_all_tv"/>
            <TextView
                android:id="@+id/save_select_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체선택"
                app:layout_constraintTop_toTopOf="@id/save_select_all_iv"
                app:layout_constraintStart_toEndOf="@id/save_select_all_iv"/>
            <ImageView
                android:id="@+id/save_play_all_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_browse_arrow_right"
                app:layout_constraintStart_toEndOf="@id/save_select_all_tv"
                app:layout_constraintTop_toTopOf="@id/save_select_all_tv"
                app:layout_constraintBottom_toBottomOf="@id/save_select_all_tv"/>
            <TextView
                android:id="@+id/save_play_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체듣기"
                app:layout_constraintTop_toTopOf="@id/save_play_all_iv"
                app:layout_constraintStart_toEndOf="@id/save_play_all_iv"
                app:layout_constraintBottom_toBottomOf="@id/save_play_all_iv"/>
            <TextView
                android:id="@+id/save_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="편집"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/save_play_all_tv"
                app:layout_constraintBottom_toBottomOf="@id/save_play_all_tv"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/save_list_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_save"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/save_play_all_tv"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>